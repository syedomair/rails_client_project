<nav class="navbar" >
    <div class="container-fluid">
        <div class="navbar-header">
            <%= link_to image_tag("logo.jpg", size:"60x60" ), {action: 'index', controller: 'store'}, class: 'navbar-brand' %>
            <%= link_to "Rails Sample API Client Application", {action: 'index', controller: 'store'}, class: 'navbar-brand' %>
        </div><!-- End of navbar header -->
        <div class="collapse navbar-collapse" >
            <ul class="nav navbar-nav navbar-right">
                <li class="active">
                    <%= link_to "Home", root_path %>
                </li>       	
                 <li id='list_sign_out' class="">
                     <%= link_to "Sign Out", signout_path, :method=>:post, :remote => true  %>
                 </li>       	
                 <li id='list_sign_in' class="">
                     <a href="#modal-sign-in" class="" data-toggle="modal" data-target="#modal-sign-in">Sign In</a>
                 </li>       	
                 <li id='list_sign_up' class="">
                     <a href="#modal-sign-up" class="" data-toggle="modal" data-target="#modal-sign-up">Sign Up</a>
                 </li>       	
            </ul>
        </div><!-- End of nav-collapse -->                
    </div><!-- End of container class -->
</nav><!-- End of navigation -->

<script>
$(document).ready(function () {
  <% if logged_in? %>
    $('#list_sign_out').show();
    $('#list_sign_in').hide();
    $('#list_sign_up').hide();
  <% else %>
    $('#list_sign_out').hide();
    $('#list_sign_in').show();
    $('#list_sign_up').show();
  <% end %>
});
</script>





