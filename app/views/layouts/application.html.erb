<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Rails API Client Application</title>
        
  <!-- Meta tags -->
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
			
  <%-#<link rel="stylesheet" href="{{asset('bundles/app/css/my_style.css')}}"> %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <!-- Jquery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>


</head>
<body>

  <div > <!-- Start of global wrapper -->

    <%= render "layouts/header" %>
    <%=yield %>
    <%= render "layouts/footer" %>

    <!-- begin:modal-sign-in -->
    <div class="modal fade" id="modal-sign-in" tabindex="-1" role="dialog" aria-labelledby="modal-sign-in" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">

          <%= form_for(:session, url: signin_path, remote: true) do|f| %>
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Sign In</h4> 
            </div>
            <div class="modal-body">
              <p style="color:red" id="err_sign_in"></p>
              <div class="form-group">
                <input type='text' id='log_in_email' name='email' class='form-control' placeholder='Email address' />
              </div>
              <div class="form-group">
               <input type='password' id='log_in_password' name='password' class='form-control' placeholder='Password' />
              </div>
            </div>
            <div class="modal-footer  text-left">
              <input id='btn_sign_in' type='submit' name='btn_submit' class='btn branding-background btn-block btn-lg' value='Sign In' />
            </div>
          <% end %>

        </div>
      </div>
    </div>

    <!-- begin:modal-signup -->
    <div class="modal fade" id="modal-sign-up" tabindex="-1" role="dialog" aria-labelledby="modal-sign-up" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">

          <%= form_for(:session, url: signup_path, remote: true) do|f| %>
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Sign Up</h4> 
            </div>
            <div class="modal-body">
              <p style="color:red; display: none; font-size: 11px" id="err_register"></p>
              <div class="row form-group">
                <div class="col-md-6">
                  <input type='text' id='first_name' name='first_name' class='form-control' placeholder='First Name' />
                </div>
                <div class="col-md-6">
                  <input type='text' id='last_name' name='last_name' class='form-control' placeholder='Last Name' />
                </div>
              </div>
              <p style="color:red" id="err_eamil_exists"></p>
              <div class="form-group">
                  <input type='text' id='email' name='email' class='form-control' placeholder='Email address' />
                </div>
                <div class="form-group">
                  <input type='password' id='password' name='password' class='form-control' placeholder='Password' />
                </div>
                <div class="form-group">
                  <input type='password' id='password_confirmation' name='password_confirmation' class='form-control' placeholder='Confirm Password' />
                </div>
              </div>
              <div class="modal-footer text-left">
                <input type='submit' class='btn branding-background btn-block btn-lg' value='Sign Up' />
              </div>
          <% end %>

        </div>
      </div>
    </div>

  </div> <!-- End of global wrapper -->


</body>
</html>
